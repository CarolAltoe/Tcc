@model tcc_core.Models.MovimentacaoMaterial

@{
    ViewData["Title"] = "Excluir Movimentação Material";
}

<h1>@ViewData["Title"]</h1>
<hr />
<h4>Tem certeza que deseja excluir a relação entre movimentação e material abaixo?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movimentacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movimentacao.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Material)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Material.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MovimentacaoId" />
        <input type="hidden" asp-for="MaterialId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary ml-2">Voltar</a>
    </form>
</div>
