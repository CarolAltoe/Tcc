@model tcc_core.Models.Material

@{
    ViewData["Title"] = "Editar Material";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Descricao" class="control-label">Descrição:</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Classificacao" class="control-label">Classificação:</label>
                <input asp-for="Classificacao" class="form-control" />
                <span asp-validation-for="Classificacao" class="text-danger"></span>
            </div>
          @*   <div class="form-group mb-3">
                <label asp-for="QuantidadeAtual" class="control-label">Quantidade atual:</label>
                <input asp-for="QuantidadeAtual" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="QuantidadeAtual" class="text-danger"></span>
            </div> *@
            <br />
            <div class="form-group mb-3 text-center">
                <input type="submit" value="Editar" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
