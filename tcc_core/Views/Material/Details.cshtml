@model tcc_core.Models.Material

@{
    ViewData["Title"] = "Detalhes do Material";
}

<h1 class="text-center mt-5">@ViewData["Title"]</h1>

<div class="container d-flex justify-content-center">
    <div class="w-75 mx-auto">
        <hr />
        <dl class="row ">
            <dt class="col-sm-3 text-start">Descrição:</dt>
            <dd class="col-sm-9 text-end">@Html.DisplayFor(model => model.Descricao)</dd>

            <dt class="col-sm-3 text-start">Classificação:</dt>
            <dd class="col-sm-9 text-end">@Html.DisplayFor(model => model.Classificacao)</dd>

            <dt class="col-sm-3 text-start">Quantidade atual:</dt>
            <dd class="col-sm-9 text-end">@Html.DisplayFor(model => model.QuantidadeAtual)</dd>
        </dl>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
