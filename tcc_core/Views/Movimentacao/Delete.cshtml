@model tcc_core.Models.Movimentacao

@{
    ViewData["Title"] = "Excluir Movimentação";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />
<h4 class="text-center">Tem certeza que deseja excluir a movimentação abaixo?</h4>

 <div class="container d-flex justify-content-center">
    <div class="w-75 mx-auto">
        <hr />
        <dl class="row">
            <dt class="col-sm-3 text-start">Responsável:</dt>
            <dd class="col-sm-9 text-end">@Html.DisplayFor(model => model.Responsavel)</dd>

            <dt class="col-sm-3 text-start">Tipo:</dt>
            <dd class="col-sm-9 text-end">@Html.DisplayFor(model => model.TipoMovimentacao)</dd>

            <dt class="col-sm-3 text-start">Data:</dt>
            <dd class="col-sm-9 text-end">@Html.DisplayFor(model => model.DtMovimentacao)</dd>

            <dt class="col-sm-3 text-start">Usuário:</dt>
            <dd class="col-sm-9 text-end">@Html.DisplayFor(model => model.Usuario.NomeCompleto)</dd>

           <dt class="col-sm-4 text-start">Possui projeto? </dt>
                    <dd class="col-sm-8 text-end">
                        @Html.DisplayFor(model => model.HasProjeto)
                    </dd>

                    @if (Model.HasProjeto)
                    {
                        <dt class="col-sm-4 text-start">
                            @Html.DisplayNameFor(model => model.Projeto.Titulo)
                        </dt>
                        <dd class="col-sm-8 text-end">
                            @Html.DisplayFor(model => model.Projeto.Titulo)
                        </dd>
                    }  </dl>

        <table class="table">
            <thead class="">
                <tr>
                    <th class="text-start">Material</th>
                    <th class="text-end">Quantidade</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MovimentacaoMaterial)
                {
                    <tr>
                        <td class ="text-start" >@item.Material.Descricao</td>
                        <td class ="text-end">@item.Quantidade</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<form asp-action="Delete">
    <div class="form-group text-center mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</form>
 

