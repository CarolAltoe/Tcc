@using tcc_core.Models.ViewModels

@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Redefinir Senha";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />

<div class="container d-flex justify-content-center">
    <div class="w-75">
        <form asp-action="ResetPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label">E-mail:</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Cpf" class="control-label">Código de Verificação: </label>
                        <input asp-for="Cpf" class="form-control" />
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="NovaSenha" class="control-label">Nova senha:</label>
                        <input asp-for="NovaSenha" class="form-control" type="password" />
                        <span asp-validation-for="NovaSenha" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmacaoSenha" class="control-label">onfirme a senha::</label>
                        <input asp-for="ConfirmacaoSenha" class="form-control" />
                        <span asp-validation-for="ConfirmacaoSenha" class="text-danger"></span>
                    </div> 
                </div>
                <div class="form-group mb-3 text-center">
                    <input type="submit" value="Redefinir" class="btn btn-success" /> |
                    <a asp-controller="Usuario" asp-action="Login" class="btn btn-secondary">Login</a>

                </div>
            </div>
        </form>
    </div>
</div>