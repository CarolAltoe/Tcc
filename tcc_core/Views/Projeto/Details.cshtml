@model tcc_core.Models.Projeto

@{
    ViewData["Title"] = "Detalhes do Projeto";
}
<h1 class="text-center mt-5">@ViewData["Title"]</h1>

<div class="container d-flex justify-content-center">
    <div class="w-75 mx-auto">
        <hr />
        <dl class="row ">
            <dt class="col-sm-3 text-start">Coordenador:</dt>
            <dd class="col-sm-9 text-end">@Html.DisplayFor(model => model.Coordenador)</dd>

            <dt class="col-sm-3 text-start">Titulo:</dt>
            <dd class="col-sm-9 text-end">@Html.DisplayFor(model => model.Titulo)</dd>

            <dt class="col-sm-3 text-start">Natureza:</dt>
            <dd class="col-sm-9 text-end">@Html.DisplayFor(model => model.Natureza)</dd>

            <dt class="col-sm-3 text-start">Data de início:</dt>
            <dd class="col-sm-9 text-end">@Html.DisplayFor(model => model.DtInicio)</dd>

            <dt class="col-sm-3 text-start">Data de encerramento:</dt>
            <dd class="col-sm-9 text-end">@Html.DisplayFor(model => model.DtFinal)</dd>
        </dl>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Edit" class="btn btn-success" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
