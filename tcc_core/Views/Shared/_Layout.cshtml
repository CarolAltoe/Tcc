

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lab. Maker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tcc_core.styles.css" asp-append-version="true" />
</head>
<body class="body">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between">

                <a class="navbar-brand @(User.Identity.IsAuthenticated ? "" : "disabled")" asp-area="" asp-controller="Home" asp-action="Index">Laboratório Maker</a>

                <div class=" d-flex justify-content-between ">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form method="post" asp-controller="Usuario" asp-action="Logout" class="form-inline">
                            <button type="submit" class="btn btn-outline-danger ">Logout</button>
                        </form> 
                        <div class="dropdown ms-3">
                            <button class="btn btn-outline-success" type="button" id="navbarScrollingDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="navbar-toggler-icon text-success"></span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end text-center " aria-labelledby="navbarScrollingDropdown">
                                <li class="nav-item">
                                    <a class="nav-link text-dark " asp-area="" asp-controller="Home" asp-action="Help">Procedimentos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark " asp-area="" asp-controller="Usuario" asp-action="Index">Usuario</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Projeto" asp-action="Index">Projeto</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Material" asp-action="Index">Material</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Agendamento" asp-action="Index">Agendamento</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Movimentacao" asp-action="Index">Movimentação</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="MovimentacaoMaterial" asp-action="Index">Movimentação - Material</a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a class="nav-link text-dark" asp-controller="Usuario" asp-action="Create">Register</a>
                        <a class="nav-link text-dark" asp-controller="Usuario" asp-action="Login">Login</a>
                    }

                </div>
            </div>
        </nav>
    </header>
    <div class="container ">
        <main role="main" class="pb-3 main-content">
            @RenderBody()
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

        </main>
    </div>

    <footer class="border-top footer text-muted ">
        <div class="container text-center">
            <p class="mb-0">Laboratório Maker - 2024 - Made by Maria Carolina.   &copy; Todos os direitos reservados.</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
