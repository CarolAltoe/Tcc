@using tcc_core.Models.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-content">

        <h1>Login</h1>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label >E-mail:</label>
                <input asp-for="Email" class="form-control" placeholder="Informe seu e-mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label>Senha:</label>
                <input asp-for="Senha" class="form-control" type="password" placeholder="Informe sua senha" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
         
            <div class="">
                <span class="link-cadastrar">
                    <a asp-controller="Usuario" asp-action="Create">Cadastre-se</a>
                </span>
            </div>

            <input type="submit" value="Acessar" class="login-button" />
        </form>



