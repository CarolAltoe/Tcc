@model tcc_core.Models.Agendamento

@{
    ViewData["Title"] = "Excluir Agendamento";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />
<h4 class="text-center">Tem certeza que deseja excluir o usuário abaixo?</h4>
<div>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4 text-start">Responsável interno:</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.ResponsavelInterno)</dd>

                    <dt class="col-sm-4 text-start">Responsável externo:</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.ResponsavelExterno)</dd>

                    <dt class="col-sm-4 text-start">Turma:</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.Turma)</dd>

                    <dt class="col-sm-4 text-start">Data de início:</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.DtInicial)</dd>

                    <dt class="col-sm-4 text-start">Data final:</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.DtFinal)</dd>

                    <dt class="col-sm-4 text-start">Quantidade de pessoas:</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.QtdPessoas)</dd>

                    <dt class="col-sm-4 text-start">Possui projeto? </dt>
                    <dd class="col-sm-8 text-end">
                        @Html.DisplayFor(model => model.HasProjeto)
                    </dd>

                    @if (Model.HasProjeto)
                    {
                        <dt class="col-sm-4 text-start">
                            @Html.DisplayNameFor(model => model.Projeto.Titulo)
                        </dt>
                        <dd class="col-sm-8 text-end">
                            @Html.DisplayFor(model => model.Projeto.Titulo)
                        </dd>
                    }

                    <dt class="col-sm-4 text-start">Usuário:</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.Usuario.NomeCompleto)</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl>
                    <dt>Descrição:</dt>
                    <dd><textarea class="form-control" rows="2" readonly>@Html.DisplayFor(model => model.Descricao)</textarea></dd>
                    <dt>Feedback:</dt>
                    <dd><textarea class="form-control" rows="2" readonly>@Html.DisplayFor(model => model.Feedback)</textarea></dd>
                    <dt>Observações:</dt>
                    <dd><textarea class="form-control" rows="2" readonly>@Html.DisplayFor(model => model.Observacoes)</textarea></dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />  |
        <a asp-action="Index" class="btn btn-secondary ml-2">Voltar</a>
    </form>
</div>
